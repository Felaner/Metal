<div class="container">
    {{#if error}}
        <div class="row">
            <p class="alert">{{error}}</p>
        </div>
    {{/if}}
    <div class="add-news col-12">
        <div class="row justify-content-center">
            <h3>Добавить новость</h3>
        </div>
        <div class="col-12">
            <form action="/add-news" method="POST" enctype="multipart/form-data" novalidate>
                <div class="form-row justify-content-center">
                    <div class="form-group col-8">
                        <label for="newsTitle"></label>
                        <input
                                id="newsTitle"
                                name="newsTitle"
                                type="text"
                                class="form-control"
                                required
                                value="{{data.newsTitle}}"
                                placeholder="Заголовок новости..."
                                style="width: 100%">
                    </div>
                </div>
                <div class="form-row justify-content-center">
                    <div class="form-group col-8">
                        <label for="newsDescription"></label>
                        <textarea
                                id="newsDescription"
                                name="newsDescription"
                                class="form-control"
                                required
                                placeholder="Текст новости..."
                                style="width: 100%">{{data.newsDescription}}</textarea>
                    </div>
                </div>
                <div class="form-row justify-content-center">
                    <div class="form-group col-6 text-center">
                        <label for="newsImg" class="input-file-button">
                            <span class="input-file-icon-wrapper">
                                <img class="input-file-icon" src="images/icons/upload.svg" alt="Выбрать файл" width="25"></span>
                            <span class="input-file-button-text">Выбрать изображения для новости</span>
                        </label>
                        <input
                                name="newsImg"
                                type="file"
                                accept="image/*"
                                id="newsImg"
                                class="add-input-img"
                                onchange="myFunc(this)"
                                required
                                value="">
                    </div>
                </div>

                <ul id="news-images" class="form-row justify-content-around">

                </ul>

                <div class="form-row justify-content-center">
                    <button type="submit" class="news-btn">Добавить новость</button>
                </div>
            </form>
        </div>
    </div>
</div>